<% if signed_in? %>
  <div class="container">
	<div class="well">
	<%= link_to "Upload a new photo", new_photo_path, class: "btn btn-primary" %>
	</div>
	
	<% @photos.in_groups_of(3) do |group| %>
 	<div class="row"> 
  	<% group.each do |photo| %>
	<div class="col-xs-4">
      
    <%= image_tag photo.image_url.to_s, class: "img-responsive" if photo %>
    	
	<%= link_to "details", photo_path(photo), class: "panel-body pull-right" if photo %>
		
      
	</div>
  	<% end %>
 	</div>
	<% end %>

	<div class="well">
	<%= link_to "Upload a new photo", new_photo_path, class: "btn btn-primary" %>
	</div>
  </div>
	
<% else %>

	<!-- Main component for a primary marketing message or call to action -->
  <div class="jumbotron">
	<div class="container">
      <h1>TokyoGram</h1>
       <p>For the photos you can't upload to social media sites!</p>
    <p>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-lg btn-primary" %> <%= link_to "Login", new_user_session_path, class: "btn btn-lg btn-default" %>
	</p>

	</div> <!-- /container -->
  </div>

<% end %>
