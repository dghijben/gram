<% if signed_in? %>
  <div class="container">
	
	<%= link_to "Upload a new photo", new_photo_path, class: "btn btn-block btn-primary" %>
	<br />
	<% @photos.in_groups_of(3) do |group| %>
 	<div class="row"> 
  	<% group.each do |photo| %>
	<div class="col-sm-4">
    <%= link_to image_tag(photo.image_url.to_s, class: "img-responsive"), photo_path(photo) if photo %>
	  <br />
	</div>
  	<% end %>
 	</div>
	<% end %>

	<%= link_to "Upload a new photo", new_photo_path, class: "btn btn-block btn-primary" %>
	<br />
  </div>
	
<% else %>

	<!-- Main component for a primary marketing message or call to action -->
  <div class="jumbotron">
	<div class="container">
      <h1>TokyoGram</h1>
       <p>For the photos you can't upload to social media sites!</p>
    <p>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-lg btn-primary" %> <%= link_to "Login", new_user_session_path, class: "btn btn-lg btn-default" %>
	</p>

	</div> <!-- /container -->
  </div>

<% end %>
